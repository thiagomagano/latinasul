---
import Layout from "../layouts/Layout.astro";

import listaCategoria from "@data/categoria";
import CategoriaProduto from "../components/sections/CategoriaProduto.astro";
import ListaCartegoria from "../components/sections/ListaCartegoria.astro";

const listaCategoriaCortada = listaCategoria.filter((c) => {
  return c.titulo !== "Peixes";
});
---

<Layout title="Produtos - Latina Sul">
  <section class="bg-base-100" transition:animate="slide">
    <div class="bg-slate-300 min-h-[230px]">
      <h1 class="text-4xl text-center pt-10 text-primary font-semibold mb-4">
        Conhe√ßa nossos produtos
      </h1>
    </div>

    <div
      class="container mx-auto -mt-28 lg:px-4 flex justify-center items-center box"
    >
      <ListaCartegoria />
    </div>
  </section>
  <div class="container mx-auto" transition:animate="slide">
    {
      listaCategoriaCortada.map((categoria) => {
        return <CategoriaProduto categoria={categoria} />;
      })
    }
  </div>
  <div class="divider"></div>
</Layout>

