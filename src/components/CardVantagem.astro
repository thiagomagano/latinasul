---
const { iconUrl, description } = Astro.props;
---

<div class="flex flex-col items-center justify-center">
  <div class="size-16">
    <img src={iconUrl.src} alt={`icon para ${description}`} class="size-16" />
  </div>
  <p class="max-w-[160px] text-center font-semibold mt-4">
    {description}
  </p>
</div>
