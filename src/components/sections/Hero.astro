---
import { fade } from "astro:transitions";
import cuiaHero from "@assets/svg/cuia-hero-white.svg";
---

<section
  class="relative h-[70svh] flex flex-col items-center justify-center text-center text-white bg-primary sm:bg-black overflow-hidden"
>
  <div
    class="video-docker absolute top-0 left-0 w-full h-full overflow-hidden hidden sm:block"
  >
    <video
      class="min-w-full min-h-full absolute object-cover"
      src="https://latinasul.s3.sa-east-1.amazonaws.com/video-capa-instintucional-latinasul.mp4"
      autoplay
      muted
      loop
    >
    </video>
  </div>
  <div class="video-content space-y-2 z-10">
    <div class="headline">
      <img
        src={cuiaHero.src}
        alt="Qualidade e excelência são nossa marca"
        class="w-[700px]"
      />
    </div>
  </div>
</section>

<style>
  .video-docker video {
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .video-docker::after {
    content: "";
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background: #003444d9;
    z-index: 1;
  }
</style>
