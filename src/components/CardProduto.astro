---
const { titulo, ref, imagem, categoria } = Astro.props;
---

<div
  class="bg-base-100 border-2 border-gray-200 max-w-80 flex flex-col items-center"
>
  <figure class="w-60 h-80">
    <!-- <Image src={image} alt="Image Place Holder" class="card-body" /> -->
    <img
      src={"/assets/produtos/" + categoria + "/" + imagem}
      alt={`imagem de ${titulo}`}
      class="w-full h-full object-contain"
    />
  </figure>

  <div class="card-body self-start">
    <h2 class="card-title text-primary text-2xl">
      {titulo}
    </h2>
    <p class="text-secondary">REF: 0000</p>
  </div>
</div>
